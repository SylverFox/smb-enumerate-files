{
	"env": {
		"node": true,
		"es6": true
	},
	"extends": "eslint:recommended",
	"parserOptions": {
		"ecmaVersion": 2018
	},
	"rules": {
		"indent": [
			"error",
			"tab"
		],
		"linebreak-style": [
			"error",
			"windows"
		],
		"quotes": [
			"error",
			"single"
		],
		"semi": [
			"error",
			"never"
		],
		"no-unused-vars": [
			"warn"
		],
		"max-len": [
			2,
			{
				"code": 100,
				"tabWidth": 2,
				"ignoreTrailingComments": true
			}
		],
		"eqeqeq": [
			"error"
		]
	}
}